{% extends 'base.html.twig' %}

{% block body %}

<section class="container">
    <h1 class="mt-5">Symfony blog</h1>
    <h2 class="mt-4">last articles</h2>
    <div class="row mt-4">
        {% for article in articles|slice(0, 3) %}
        <article class="col-md-4 mt-4">
            <img class="card-image" src="{{ article.imageurl }}" alt="">
            <div class="card">
                <h3 class="card-title mb-3">{{ article.title }}</h3>
                <div class="d-flex justify-content-between align-items-center mt-1 mb-3">
                    <span class="card-tag">#{{ article.tag }}</span>
                    <span class="card-date">20/01/2020</span>
                </div>
                <p class="card-text">{{ article.content }}</p>
                <a href="#" class="card-link">read more</a>
            </div>
        </article>
        {% endfor %}
    </div>
    <div class="row justify-content-center">
        <a href="/news" class="btn btn-dark mt-5">more articles</a>
    </div>
</section>

{% endblock %}